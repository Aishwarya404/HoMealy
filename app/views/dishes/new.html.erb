<head> 
    <% content_for :stylesheets do %>
        <%= stylesheet_link_tag 'adddish' %>
    <% end %>
</head>
<body>
    <div class="container">
        <div class="title">
            Please enter following information for your dish 
        </div>
        <br>
        <%= form_for @dish do |f| %>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :DISHNAME %>
                </div>
                <div class="col-md-9"> 
                    <%= f.text_field :dishname %>
                </div>
            </div>
            <% if @dish.errors.messages[:dishname] %>
                <div class="row"> 
                    <div class="col-md-3"></div>
                    <div class="col-md-9"> 
                        <ul>
                            <% @dish.errors.messages[:dishname].each do |msg| %>
                                <li> <%= msg %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
            <br>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :EMAIL %>
                </div>
                <div class="col-md-9"> 
                    <%= f.text_field :user_email, value:current_user.email, readonly: true %>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :PRICE %>
                </div>
                <div class="col-md-9"> 
                    <%= f.text_field :price %>
                </div>
            </div>
            <% if @dish.errors.messages[:price] %>
                <div class="row"> 
                    <div class="col-md-3"></div>
                    <div class="col-md-9"> 
                        <ul>
                            <% @dish.errors.messages[:price].each do |msg| %>
                                <li> <%= msg %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
            <br>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :CUISINE %>
                </div>
                <div class="col-md-9"> 
                <%= f.select :cuisine, ["American", "Chinese", "French", "Italian", "Indian", "Mexican", "Thai", "Other"], selected: "Other" %>
                </div>
            </div>
            <% if @dish.errors.messages[:cuisine] %>
                <div class="row"> 
                    <div class="col-md-3"></div>
                    <div class="col-md-9"> 
                        <ul>
                            <% @dish.errors.messages[:cuisine].each do |msg| %>
                                <li> <%= msg %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
            <br>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :QUANTITY %>
                </div>
                <div class="col-md-9"> 
                    <%= f.text_field :quantity %>
                </div>
            </div>
            <% if @dish.errors.messages[:quantity] %>
                <div class="row"> 
                    <div class="col-md-3"></div>
                    <div class="col-md-9"> 
                        <ul>
                            <% @dish.errors.messages[:quantity].each do |msg| %>
                                <li> <%= msg %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
            <br>
            <div class="row">
                <div class="col-md-3"> 
                    <%= f.label :DESCRIPTION %>
                </div>
                <div class="col-md-9"> 
                    <%= f.text_field :description %>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12"> 
                    <%= f.submit "Upload Dish" %>
                </div>
            </div>
        <% end %>
        <br>
        <button type="button" class="btn btn-secondary">
            <a href="/home/main" > GO BACK </a>
        </button>
    </div>
</body>