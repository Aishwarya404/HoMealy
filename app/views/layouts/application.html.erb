<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if current_user %>
      <%= "Logged in as #{current_user.name}" %> | <%= link_to 'Home', home_main_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% end %>
    <%= yield %>
    <% if notice %>
      <%= notice %>
	  <% end %>
	
	  <% if alert %>
      <%= alert %>
	  <% end %>
  </body>
</html>
